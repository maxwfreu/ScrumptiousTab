{
  "name": "scrumptious",
  "version": "1.0.0",
  "description": "Kanban board for the Chrome new tab",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --env development",
    "build": "ebpack --config webpack.prod.js --mode production",
    "build-firefox": "webpack --config webpack.firefox.js --mode production",
    "build-staging": "webpack --config webpack.staging.js --mode production",
    "build-demo": "webpack --config webpack.demo.js --mode development",
    "deploy-demo": "npm run build-demo && aws s3 sync dist/ s3://demo.scrumptioustab.com",
    "serve": "node_modules/.bin/http-server ./dist",
    "test": "NODE_ENV=test jest --verbose false --coverage && exit 0",
    "test:ci": "NODE_ENV=test jest --coverage && cat ./coverage/lcov.info | codacy-coverage --verbose",
    "test:coverage": "NODE_ENV=test jest --verbose --coverage && exit 0",
    "test:single": "NODE_ENV=test jest --verbose false --coverage -t Card && exit 0",
    "deploy": "node ./deploy.js"
  },
  "author": "Max Freundlich",
  "license": "ISC",
  "dependencies": {
    "@loadable/component": "5.14.1",
    "browser-image-compression": "1.0.12",
    "chrome-storage-largesync": "0.0.4",
    "classnames": "2.2.6",
    "emotion": "10.0.27",
    "immutability-helper": "3.1.1",
    "immutable": "4.0.0-rc.12",
    "is-hotkey": "0.1.6",
    "is-url": "1.2.4",
    "localforage": "1.9.0",
    "lz-string": "1.4.4",
    "natural-drag-animation-rbdnd": "2.0.2",
    "prop-types": "15.6.2",
    "react": "16.14.0",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "16.14.0",
    "react-dropzone": "10.2.2",
    "react-input-autosize": "2.2.2",
    "react-pose": "4.0.10",
    "react-redux": "7.2.2",
    "react-stripe-elements": "5.1.0",
    "react-toggle": "4.1.1",
    "redux": "4.0.5",
    "redux-thunk": "2.3.0",
    "slate": "0.44.9",
    "slate-plain-serializer": "0.6.30",
    "slate-react": "0.21.12",
    "uuid": "3.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-react": "7.12.1",
    "babel": "6.23.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "10.1.0",
    "babel-jest": "^26.6.1",
    "babel-loader": "8.1.0",
    "babel-plugin-transform-dynamic-import": "2.1.0",
    "babel-polyfill": "^6.26.0",
    "chai": "4.2.0",
    "chrome-webstore-upload": "0.2.2",
    "codacy-coverage": "3.4.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^5.0.0",
    "dotenv-webpack": "^5.0.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "http-server": "0.11.1",
    "identity-obj-proxy": "3.0.0",
    "jest-cli": "24.9.0",
    "mini-css-extract-plugin": "^1.2.1",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "redux-mock-store": "1.5.4",
    "regenerator-runtime": "0.13.7",
    "sass-loader": "^10.0.4",
    "sinon": "7.5.0",
    "style-loader": "^2.0.0",
    "svg-inline-loader": "0.8.2",
    "url-loader": "^4.1.1",
    "webpack": "5.3.2",
    "webpack-async-chunk-names-plugin": "0.1.1",
    "webpack-bundle-analyzer": "3.9.0",
    "webpack-cli": "4.1.0",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "5.3.0",
    "webpack-node-externals": "2.5.2",
    "zip-folder": "1.0.0"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      ".+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      ".+\\.(css|scss|png)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/conf/setupTests.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  }
}
